---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import AriellHeadshot from '../assets/arielle-headshot.jpg';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1>We're building power within our community.</h1>
					<p>Automation and AI infrastructure for QT-owned businesses and organizations committed to survival, empowerment, change, and connection.</p>
					<p class="cta"><a href="/about">Learn more about us</a></p>
				</div>
				<img src={AriellHeadshot.src} alt="Arielle's Parlor" class="hero-image" />
			</section>

			<section class="posts">
				<h2>From Our Blog</h2>
				{sortedPosts.map((post) => (
					<article>
						<a href={`/blog/${post.id}/`}>
							<h3>{post.data.title}</h3>
						</a>
						<p>{post.data.description}</p>
						<a href={`/blog/${post.id}/`}>Read more â†’</a>
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		display: flex;
		gap: 2rem;
		align-items: center;
		margin-bottom: 4rem;
		padding: 2rem 0;
	}

	.hero-content {
		flex: 1;
	}

	.hero-content h1 {
		margin-top: 0;
		font-size: 2.5em;
		line-height: 1.2;
		color: rgb(var(--black));
	}

	.hero-content p {
		font-size: 1.1em;
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.cta a {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: var(--accent);
		color: white;
		text-decoration: none;
		border-radius: 4px;
		font-weight: 600;
		transition: background 0.2s;
	}

	.cta a:hover {
		background: var(--accent-dark);
	}

	.hero-image {
		flex: 1;
		max-width: 300px;
		width: 100%;
		border-radius: 8px;
	}

	.posts {
		margin-top: 3rem;
	}

	.posts h2 {
		margin-bottom: 2rem;
	}

	.posts article {
		margin-bottom: 2rem;
	}

	.posts h3 {
		margin-bottom: 0.5rem;
	}

	@media (max-width: 768px) {
		.hero {
			flex-direction: column;
			gap: 1.5rem;
		}

		.hero-content h1 {
			font-size: 1.8em;
		}

		.hero-image {
			max-width: 100%;
		}
	}
</style>
