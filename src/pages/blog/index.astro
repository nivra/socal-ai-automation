---
import { getCollection, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Extract text up to the first sentence ending after ~300 chars
function getExcerpt(body: string, minLen = 300) {
	// Strip markdown headings, bold, italic, links, images
	const plain = body
		.replace(/^#{1,6}\s+.*$/gm, '')
		.replace(/\*\*([^*]+)\*\*/g, '$1')
		.replace(/\*([^*]+)\*/g, '$1')
		.replace(/\[([^\]]+)\]\([^)]+\)/g, '$1')
		.replace(/!\[([^\]]*)\]\([^)]+\)/g, '')
		.replace(/\n{2,}/g, ' ')
		.trim();
	if (plain.length <= minLen) return plain;
	// Find the next sentence-ending punctuation after minLen
	const sentenceEnd = plain.slice(minLen).search(/[.!?]\s/);
	if (sentenceEnd !== -1) return plain.slice(0, minLen + sentenceEnd + 1);
	// Fallback: if no sentence end found within reason, cut at next period
	const period = plain.indexOf('.', minLen);
	if (period !== -1 && period < minLen + 200) return plain.slice(0, period + 1);
	return plain.slice(0, minLen).replace(/\s+\S*$/, '') + '…';
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Blog</h1>
			{posts.map((post) => (
				<article class="blog-entry">
					<a href={`/blog/${post.id}/`}>
						<h2>{post.data.title}</h2>
					</a>
					<p class="date">
						<FormattedDate date={post.data.pubDate} />
					</p>
					<p class="excerpt">{getExcerpt(post.body ?? '')}</p>
					<a href={`/blog/${post.id}/`} class="read-more">Read more →</a>
				</article>
			))}
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 720px;
		margin: 0 auto;
		padding: 1em;
		color: rgb(var(--gray-dark));
	}
	h1 {
		margin-top: 4rem;
		text-align: center;
	}
	.blog-entry {
		margin-bottom: 2.5rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid rgba(var(--gray-light), 0.5);
	}
	.blog-entry:last-child {
		border-bottom: none;
	}
	.blog-entry h2 {
		margin: 0 0 0.25rem 0;
	}
	.blog-entry a {
		text-decoration: none;
		color: rgb(var(--black));
	}
	.blog-entry a:hover h2 {
		color: var(--accent);
	}
	.date {
		margin: 0 0 0.75rem 0;
		color: rgb(var(--gray));
		font-size: 0.9rem;
	}
	.excerpt {
		margin: 0 0 1rem 0;
		line-height: 1.6;
	}
	.read-more {
		color: var(--accent) !important;
		font-weight: 500;
		font-size: 0.9rem;
	}
	.read-more:hover {
		text-decoration: underline !important;
	}
</style>
